" ===============
" Common settings
" ===============

syntax on
filetype plugin indent on

set number
set expandtab
set tabstop=4
set shiftwidth=4
set smartindent
set autoindent
set cindent
set cinoptions=g0
set list
set listchars=tab:»-,trail:-,extends:»,precedes:«,nbsp:%
set colorcolumn=80
set t_Co=256
set wildmenu
set showmatch
set title
set scrolloff=5
set conceallevel=0
set fileformat=unix
set encoding=utf-8
set clipboard+=unnamedplus
